{
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "skipLibCheck": true,
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": [
    "src/prompt/deprecated",
    "src/core/satellites/_deprecated",
    "src/scripts"],
  "extends": "expo/tsconfig.base"
}
