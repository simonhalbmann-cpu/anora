rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null && request.auth.uid != null;
    }

    function isOwn(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /brain/{userId} {
      allow read: if isOwn(userId);
      allow write: if false;
    }

    match /brain/{userId}/facts/{factId} {
      allow read, write: if isOwn(userId);
    }

    match /brain/{userId}/meta/{metaId} {
      allow read: if isOwn(userId);
      allow write: if false;
    }

    match /brain/{userId}/presenceEvents/{eventId} {
      allow read: if isOwn(userId);
      allow write: if false;
    }

    match /profiles/{userId} {
      allow read, create, update: if isOwn(userId);
      allow delete: if false;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}